<h1>Cadastrar novo exercício</h1>
<form action="/exercicios" method="POST">
    <div class="form-group">
        <label for="exercicio1">1º Exercício:</label>
        <input type="text" class="form-control" id="exercicio1" name="exercicio1" required>
    </div>
    <div class="form-group">
        <label for="exercicio2">2º Exercício:</label>
        <input type="text" class="form-control" id="exercicio2" name="exercicio2" required>
    </div>
    <div class="form-group">
        <label for="exercicio3">3º Exercício:</label>
        <input type="text" class="form-control" id="exercicio3" name="exercicio3" required>
    </div>
    <div class="form-group">
        <label for="exercicio4">4º Exercício:</label>
        <input type="text" class="form-control" id="exercicio4" name="exercicio4" required>
    </div>
    <div class="form-group">
        <label for="repeticao">Repetições:</label>
        <input type="number" class="form-control" id="repeticao" name="repeticao" required>
    </div>
    <div class="form-group">
        <label for="serie">Séries:</label>
        <input type="number" class="form-control" id="serie" name="serie" required>
    </div>
    <div class="form-group">
        <label for="duracao">Duração:</label>
        <input type="time" class="form-control" id="duracao" name="duracao" required>
    </div>
    <div class="form-group">
        <label for="aplicabilidade">Aplicabilidade:</label>
        <input type="text" class="form-control" id="aplicabilidade" name="aplicabilidade" required>
    </div>
    <div class="form-group">
        <label for="musica">Música:</label>
        <select class="form-control" id="musica" name="musica" required>
            <% musicas.forEach(musica => { %>
                <option value="<%= musica.id %>"><%= musica.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
